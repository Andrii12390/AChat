generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(ulid())
  email      String  @unique
  username   String
  password   String?
  imageUrl   String? @map("image_url")
  isVerified Boolean @default(false) @map("is_verified")
}
